<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp"
        tools:context=".SubjectInsertActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@color/menu_que">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:textColor="#FFFFFF"
                android:textColorHint="#d9faff"
                android:id="@+id/subject_name_edt"
                android:hint="subject name"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/subject_code_edt"
                android:textColor="#FFFFFF"
                android:textColorHint="#d9faff"
                android:hint="subject code"/>
    </LinearLayout>
    <Button
            android:text="@string/save"
            android:background="@drawable/btnlog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/save_subject_btn"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF"/>
</LinearLayout>