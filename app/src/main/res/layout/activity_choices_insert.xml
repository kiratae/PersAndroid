<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChoicesInsertActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="430dp"
                android:layout_height="208dp">
            <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="51dp" android:id="@+id/edit_text" android:text="แก้ไขคำตอบถูก"
                    android:textSize="36sp" android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textAlignment="center"/>
            <EditText
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="82dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/edit_correct" android:hint="คำตอบถูก"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_marginTop="20dp"
                    android:text="แก้ไขคำตอบลวง"
                    android:layout_width="match_parent"
                    android:layout_height="54dp" android:id="@+id/edit_text2" android:textSize="36sp"
                    android:textAlignment="center"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"/>
            <EditText
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/edit_incorrect1" android:hint="คำตอบลวง1"/>
            <EditText
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/edit_incorrect2" android:hint="คำตอบลวง2"/>
            <EditText
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/edit_incorrect3" android:hint="คำตอบลวง3"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_height="match_parent">
            <Button
                    android:text="ยกเลิก"
                    android:layout_width="184dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/button"/>
            <Button
                    android:text="ยืนยัน"
                    android:layout_width="217dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/button2" android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>