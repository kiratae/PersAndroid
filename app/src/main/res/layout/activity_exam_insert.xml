<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"

            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10dp" >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/Detail"
                android:text="Detail"
                android:textColor="#F44336" android:textAlignment="viewStart" android:textSize="24sp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:text="ID"
                android:ems="10"
                android:id="@+id/id"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/name"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/number" android:text="Number of exam"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dp">

            <Button
                    android:text="Cancel"
                    android:layout_width="177dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/canel"
                    tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="16dp"/>
                <Button
                        android:text="NEXT"
                        android:layout_width="fill_parent"
                        android:layout_height="48dp"
                        android:id="@+id/next"
                        android:layout_marginRight="10dp"
                        tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="204dp"/>

        </LinearLayout>
    </LinearLayout>